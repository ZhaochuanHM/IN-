/* pages/exchange_success/exchange_success.wxss */
.container{
  text-align: center;
}
.success_img{
  width: 100%;
  height: 50vw;
  display: flex;
  justify-content: center;
  align-items: center;
}
.success_img>image{
  width: 200rpx;
  height: 200rpx;
}
.color_red{
  color: #FF1A1A;
  font-size: 40rpx;
  font-weight: bold;
}
.color_gray{
  color: #808080;
  font-size: 24rpx;
}
.address_btn{
  width: 60%;
  height: 90rpx;
  border-radius: 45rpx;
  background: #FF1A1A;
  color: #fff;
  margin: 5vh auto;
  line-height: 90rpx;
  font-size: 30rpx;
}
.no_address{
  display: none;
}
/* 有默认地址 */
.add_infor{
  background: #F5F5F5;
  border-radius: 20rpx;
  width: 90%;
  margin: 30rpx auto;
  padding: 3vh 5%;
  text-align: left;
  box-sizing: border-box;
}
.user_infor{
  font-size: 26rpx;
  font-weight: bold;
}
.user_infor>text{
  margin-right: 50rpx;
}
.address{
  color: #808080;
  font-size: 24rpx;
  margin-top: 20rpx;
}
.check_btn{
  width: 90%;
  margin: 50rpx auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.check_btn>button{
  width: 40%;
  height: 90rpx;
  line-height: 90rpx;
  border-radius: 45rpx;
  border: 1px solid #FF1A1A;
  font-size: 30rpx;
}
.confirm{
  color: #fff;
  background: #FF1A1A;
}
.change{
  color: #FF1A1A;
  background: #fff;
}