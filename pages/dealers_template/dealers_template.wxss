/* pages/dealers_template/dealers_template.wxss */
view{
  box-sizing: border-box;
}
.container{
  border-top: 1px solid #F5F5F5;
  background: #F5F5F5;
  min-height: 100vh;
}
.item{
  width: 90vw;
  margin: 30rpx auto;
  padding: 0 5vw;
  border-radius: 20rpx;
  font-size: 26rpx;
  color: #808080;
  background: #fff;
  border-bottom: 1px solid #fff;
}
.head{
  color: #000;
  padding: 20rpx 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.time{
  justify-self: flex-end;
  color: #808080;
  font-size: 24rpx;
  margin-left: auto;
}
.content{
  padding: 20rpx;
  background: #F5F5F5;
  display: flex;
  align-items: center;
}
.content>image{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right:30rpx;
}
.title>view{
  margin: 10rpx 0;
}
.title>view:first-child{
  font-size: 26rpx;
  font-weight: bold;
  color: #000;
  width: 200rpx;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
}
.title>view:last-child{
  font-size: 20rpx;
}
.mar_b{
  margin-bottom: 10px;
}
/* 编辑 审批*/
.status{
  display: flex;
  justify-content: center;
  align-items: center;
}
.pass_for{
  margin: 0 10rpx;
  font-size: 24rpx;
}
.audit {
  color: #4429F2;
}
.no_pass{
  color: #EA0F0F;
}
.success{
  color: #3AC984;
}
.status>image{
  width: 30rpx;
  height: 30rpx;
  display: inline-block;
  vertical-align: middle;
}
.operation{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 20rpx 0;
}
.operation>view{
  width: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  color: #000;
}
.operation>view:first-child{
  border-right: 1rpx solid #E6E6E6;
}
.operation image{
  width: 27rpx;
  height: 27rpx;
  margin-right: 5rpx;
}