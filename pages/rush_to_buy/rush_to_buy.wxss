/* pages/seckill/seckill.wxss */
.seckill_header_img{
  width: 100%;
}
.seckill_info{
  padding: 5rpx 25rpx;
}
.seckill_info_title{
  font-size: 35rpx;
  font-weight: 600;
}
.seckill_info_price{
  display: block;
}
.seckill_info_price1{
  font-size: 30rpx;
  color: #EA0F0F;
  font-weight: 600;
}
.seckill_info_price2{
  margin-left: 30rpx;
  font-size: 25rpx;
  color: #999999;
  text-decoration:line-through;
}
.seckill_people{
  font-size: 20rpx;
  color: #808080;
}
.sponsor{
  padding: 25rpx 25rpx;
  background-color: #FFF8E5;
  font-size: 25rpx;
}
.sponsor_text1{
  display: inline-block;
  float: left;
}
.sponsor_text2{
  display: inline-block;
  float: right;
}
.clearfix:after {
    content: ".";
    visibility: hidden;
    display: block;
    height: 0;
    clear: both;
}
.footer_title{
  margin-left: 20rpx;
}
.line{
  display: inline-block;
  background-color: #FF1A1A;
  width: 8rpx;
  height: 30rpx;
  border-radius: 20rpx;
  vertical-align: middle;
}
.footer_title_text{
  display: inline-block;
  font-size: 30rpx;
  vertical-align: middle;
  margin-left: 20rpx;
  font-weight: 600;
}
.introduce{
  font-size: 28rpx;
  padding-top: 30rpx;
  padding-left: 50rpx;

}
.introduce_text{
  display: block;
  line-height: 50rpx;
}
.rule_text{
  display: block;
  line-height: 50rpx;
}
.rush_to_buy{
  text-align: center;
  border: 0.5px solid #FF1A1A;
  background-color: #FF1A1A;
  margin: 35rpx 30rpx;
  height: 80rpx;
  line-height: 70rpx;
  border-radius: 40rpx;
}
.rush_to_buy_text{
  vertical-align: middle;
  color: #ffffff;
  margin-left: 20rpx;
  font-size: 35rpx;
}
.rush_to_buy_box{
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding: 5vw;
  width: 100vw;
  text-align: center;
}
.rush_to_buy_btn1{
  border: 0.5px solid #FF1A1A;
  background-color: #FF1A1A;
  width: 300rpx;
  padding: 10rpx 0rpx;
  color: #ffffff;
  border-radius: 40rpx;
  margin-right: 10rpx;
  font-size: 35rpx;
}
.rush_to_buy_btn2{
  border: 0.5px solid #FF1A1A;
  width: 300rpx;
  padding: 10rpx 0rpx;
  color: #FF1A1A;
  border-radius: 40rpx;
  margin-left: 10rpx;
  font-size: 35rpx;
}
.rush_to_buy_btn3{
  display: inline-block;
  border: 0.5px solid #808080;
  background: #808080;
  width: 300rpx;
  padding: 10rpx 0rpx;
  color: #fff;
  border-radius: 40rpx;
  margin-left: 10rpx;
  font-size: 35rpx;
}