/* pages/my/my.wxss */

.container {
  min-height: 100vh;
  background: #f2f2f2;
  box-sizing: border-box;
}

.head {
  /* margin: 20rpx auto; */
  width: 100%;
}

.user {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  box-sizing: border-box;
  padding: 8% 15% 15% 15%;
  background: -webkit-gradient(linear, 0% 0%, 0% 100%,from(#FF8E42), to(#FF1A1A));
}

.head_img {
  display: flex;
  align-items: center;
  text-align: center;
  margin: 0 auto;
}

.head_img>image {
  width: 146rpx;
  height: 146rpx;
  border-radius: 50%;
  border: 2px solid #ffffff;
  /* margin-right: 30rpx; */
}

.nick_name {
  font-size: 30rpx;
  font-weight: bold;
}

.notice {
  width: 46rpx;
  height: 46rpx;
  position: relative;
}

.infor:after {
  display: block;
  content: ' ';
  width: 12rpx;
  height: 12rpx;
  background: #ff1a1a;
  border-radius: 50%;
  position: absolute;
  top: 0;
  right: 0;
}

.activity {
  width: 100%;
  background-color: #ffffff;
  padding: 0 5%;
  height: 180rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-direction: row;
  box-sizing: border-box;
  margin-bottom:20rpx; 
}

.activity_item {
  width: 30%;
  height: 100rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  color: #808080;
  font-size: 24rpx;
}

.num {
  font-size: 40rpx;
  font-weight: bold;
  color: #000;
}

