.mine {
  background: #fff;
  margin-bottom: 20rpx;
}

.li {
  display: flex;
  justify-content: space-between;
  padding: 5%;
  box-sizing: border-box;
  align-items: center;
  font-size: 26rpx;
  border-bottom: 1px solid #f2f2f2;
}

.left_icon {
  display: flex;
  align-items: center;
}

.li image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 20rpx;
}

.right_icon {
  width: 100rpx;
  position: relative;
}

.right_icon:after {
  position: absolute;
  right: 0;
  top: 6rpx;
  content: '';
  display: inline-block;
  width: 10px;
  height: 10px;
  border-top: 3rpx solid #D4D4D4;
  border-right: 3rpx solid #D4D4D4;
  transform: rotate(45deg);
  -webkit-transform: rotate(45deg);
}
.tool{
  background: #fff;
}
.title{
  position: relative;
}
.on:after{
  display: block;
  content: ' ';
  width: 12rpx;
  height: 12rpx;
  background: #ff1a1a;
  border-radius: 50%;
  position: absolute;
  top: 0;
  right: -10rpx;
}
.ready{
  color: #FF1A1A!important;
}
.ready:before{
  display: block;
  content: ' ';
  width: 12rpx;
  height: 12rpx;
  background: #ff1a1a;
  border-radius: 50%;
  position: absolute;
  top: 12rpx;
  left: -20rpx;
}
.color_b{
  color: #4429F2;
}
.login-out{
  width:30%;
  background:#FF1A1A;
  text-align:center;
  border-radius:10rpx;
  color:#fff;
  position:absolute;
  bottom:20rpx;
  left:35%;
}


