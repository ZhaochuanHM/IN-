/* pages/place_order/place_order.wxss */
.container{
  width: 100%;
  min-height: 100vh;
}
view{
  box-sizing: border-box;
}
.pic{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.pic>image{
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 60rpx;
}
.pic>view{
  font-size: 40rpx;
  color: #FF1A1A;
  text-align: center;
  font-weight: bold;
}
.btn{
  width: 90%;
  margin: 70rpx auto;
  background: #FF1A1A;
  border-radius: 45rpx;
  text-align: center;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  height: 90rpx;
}
.btn>image{
  width: 36rpx;
  height: 28rpx;
  margin-right: 15rpx;
}