/* pages/address_list/address_list.wxss */
view{
  box-sizing: border-box;
}
.container{
  width: 100vw;
  height: 100vh;
  background: #F5F5F5;
  border-top: 1px solid #F5F5F5;
}
.content{
  height: calc(100vh - 140rpx);
  overflow: auto;
}
.list_item{
  background: #fff;
  margin: 30rpx auto;
  width: 100vw;
}
.user_infor{
  padding: 20rpx 5%;
  text-align: left;
  box-sizing: border-box;
  font-size: 26rpx;
  font-weight: bold;
  border-bottom: 1px solid #E6E6E6;
}
.user>text{
  margin-right: 50rpx;
}
.address{
  color: #808080;
  font-size: 24rpx;
  padding: 10rpx 0;
  width: 100%;
}
.tools{
  padding: 14rpx 5%;
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-content: center;
  color: #333333;
  font-size: 24rpx;
}
.left,.right,.right>view{
  display: flex;
  align-items: center;
}
.left image{
  width: 44rpx;
  height: 44rpx;
  margin-right: 6rpx;
}
.right image{
  width: 33rpx;
  height: 33rpx;
  margin-right: 6rpx;
}
.right>view{
  margin: 0 15rpx;
}
.add_address{
  width: 60vw;
  height: 90rpx;
  font-size: 30rpx;
  color: #fff;
  border-radius: 45rpx;
  text-align: center;
  line-height: 90rpx;
  background: #FF1A1A;
  position: fixed;
  bottom: 20rpx;
  left: 20%;
}