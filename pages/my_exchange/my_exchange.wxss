/* pages/my_exchange/my_exchange.wxss */
.container{
  background: #F2F2F2;
  box-sizing: border-box;
  border-top: 1px solid #F2F2F2;
  min-height: 100vh;
}
.item{
  margin: 30rpx 0;
  background: #fff;
}
.head{
  width: 100vw;
  box-sizing: border-box;
  padding: 5vw;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #E6E6E6; 
}
.head>image{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 1px solid #E6E6E6;
}
.text{
  width: 60%;
}
.goods_name{
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}
.state{
  font-size: 26rpx;
}
.link{
  color: #808080;
  font-size: 26rpx;
}
.link>text{
  margin-right: 20rpx;
}
.link>text:last-child{
  border: 1px solid #4429F2;
  color: #4429F2;
  font-size: 20rpx;
  padding: 4rpx 20rpx;
  border-radius: 20rpx;
  vertical-align: middle;
}
.green{
  color: #3AC984;
}
.orange{
  color: #FF6E3D;
}
/* 地址 */
.add_box{
  width: 100vw;
  box-sizing: border-box;
  padding:0 5vw;
  border-bottom: 1px solid #fff;
}
.add_icon{
  font-size: 28rpx;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  position: relative;
}
.up:after{
  content: "";
  position: absolute;
  right: 0;
  top: 30rpx;
  display: inline-block;
  width: 20rpx;
  height: 20rpx;
  border-top: 1px solid #D4D4D4;
  border-right: 1px solid #D4D4D4;
  transform: rotate(-45deg);
  -webkit-transform: rotate(-45deg);
}
.down:after{
  content: "";
  position: absolute;
  right: 0;
  top: 30rpx;
  display: inline-block;
  width: 20rpx;
  height: 20rpx;
  border-bottom: 1px solid #D4D4D4;
  border-left: 1px solid #D4D4D4;
  transform: rotate(-45deg);
  -webkit-transform: rotate(-45deg);
}
.address{
  box-sizing: border-box;
  width: 100%;
  padding: 5%;
  background: #F5F5F5;
  border-radius: 20rpx;
  margin-bottom: 5vw;
  display: none;
}
.show{
  display: block!important;
}
.add_title{
  font-size: 32rpx;
  font-weight: bold;
  margin: 10rpx 0;
}
.add_title>text{
  margin-right: 20rpx;
}
.add_detail{
  color: #808080;
  font-size: 28rpx;
}