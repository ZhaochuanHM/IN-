/* pages/merchant_list/merchant_list.wxss */
.search_box{
  width: 100%;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
}
.search{
  padding: 10rpx 20rpx;
}
icon{
  display: inline-block;
  vertical-align: middle;
}
input{
  display: inline-block;
  vertical-align: middle;
  font-size: 15px;
  margin-left: 20rpx;
  width: 450rpx;
}
.shadow{
  border-radius: 60rpx;
  box-shadow: 0 0 20px rgba(230,230,230,1);
}
.search_btn{
  display: inline-block;
  font-size: 15px;
  vertical-align: middle;
  margin-left: 20rpx;
}
.merchant_list{
  width: 100%;
  border-bottom: 1px solid #E6E6E6;
  padding: 30rpx 20rpx; 
}
.merchant_list_img{
  width: 60rpx;
  height: 60rpx;
  margin-top: 10rpx;
}
.merchant_list_info{
  display: inline-block;
  vertical-align: top;
  margin-left: 20rpx;
  width: 500rpx;
}
.info1{
  font-size: 30rpx;
  font-weight: 600;
}
.info2{
  font-size: 25rpx;
  color: #808080;
}
.info3_img1{
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
}
.info3_img2{
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
  margin-left: 20rpx;
}
.info_text{
  font-size: 30rpx;
  vertical-align: middle;
  margin-left: 20rpx;
}
.edit_btn{
  display: inline-block;
  vertical-align: middle;
  color: #808080;
  font-size: 25rpx;
  background-color: #E6E6E6;
  padding: 20rpx 20rpx;
  border-radius: 35rpx;
}